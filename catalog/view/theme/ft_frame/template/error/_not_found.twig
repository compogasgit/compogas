{{ header }}
<div id="error-not-found" class="container">
	<div class="row">
		{% if column_left %}
		<div class="col-12 col-sm col-lg-3 order-lg-1 col-xl-mw260">
			{{ column_left }}
		</div>
		{% endif %}
		{% if column_right %}
		<div class="col-12 col-sm col-lg-3 order-lg-3 col-xl-mw260">
			{{ column_right }}
		</div>
		{% endif %}
		<div id="content" class="col-12 col-lg order-lg-2 mb-3">
			{{ content_top }}
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					{% set i = 0 %}
					{% for breadcrumb in breadcrumbs %}
					{% set i = i + 1 %}
					{% if i == 1 %}
					<li class="breadcrumb-item">
						<a href="{{ breadcrumb.href }}">
							<span class="si si-18 d-inline-block">
								<svg height="18" fill="#333" viewBox="0 0 24 24" width="18" xmlns="http://www.w3.org/2000/svg">
									<path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
								</svg>
							</span>
						</a>
					</li>
					{% elseif breadcrumbs|length != i %}
					<li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
					{% else %}
					<li class="breadcrumb-item active">{{ breadcrumb.text }}</li>
					{% endif %}
					{% endfor %}
				</ol>
			</nav>

			{# <div class="row">
				<div class="col-12 col-sm-4 col-md-3 col-lg-2">
					<img src="/image/catalog/errors/404/error-404-x.png" alt="Error 404. Not found." class="rounded">
				</div>
				<div class="col">
					<h1 class="h2 mb-4">{{ heading_title }}</h1>
					<p>{{ text_error }}</p>
				</div>
			</div> #}

			{# <div class="card mb-3">
				<img class="card-img-top" src="/image/catalog/errors/404/error404.jpg" alt="Error 404. Not found.">
				<div class="card-body">
					<h5 class="card-title">{{ heading_title }}</h5>
					<p class="card-text">{{ text_error }}</p>
				</div>
			</div> #}

			<div class="row mb-3">
				<div class="col-12 col-sm-4 col-lg-2 text-center">
					<img src="/image/catalog/errors/404/error-404-144.jpg" alt="Error 404. Not found." class="rounded">
				</div>
				<div class="col text-center">
					<h1 class="h2 mb-4">{{ heading_title }}</h1>
					<p>{{ text_error }}</p>
					<div><a href="/" class="btn btn-primary">Перейти на Главную</a><a href="/kompozitnye-ballony" class="btn btn-info mr-1 ml-1">Купить Баллоны</a><a href="/komplektuyuschie" class="btn btn-info">Купить Комплектующие</a></div>
				</div>
			</div>


			{# <div>
				<a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a>
			</div> #}
		</div>
	</div>
	{{ content_bottom }}
</div>
