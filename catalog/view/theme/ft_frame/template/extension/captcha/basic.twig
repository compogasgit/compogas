<div>
  {% if route|slice(0, 9) == 'checkout/' %}<h5>{{ text_captcha }}</h5>{% endif %}
  <div class="form-group required">
    {% if route|slice(0, 9) == 'checkout/' %}
    <label for="input-payment-captcha">{{ entry_captcha }}</label>
		<div class="form-row">
			<div class="col-12 col-sm mb-2 mb-sm-0">
				<input type="text" name="captcha" id="input-payment-captcha" class="form-control h-100" autocomplete="off" />
			</div>
			<div class="col-auto">
				<img src="index.php?route=extension/captcha/basic/captcha" class="imf-fluid rounded " alt="" />
			</div>
		</div>
    {% else %}
		<div class="form-row">
			<div class="col-12 col-sm mb-2 mb-sm-0">
				<input type="text" name="captcha" id="input-captcha" class="form-control h-100 {% if error_captcha %}border-danger{% endif %}" placeholder="{{ entry_captcha }}" />
			</div>
			<div class="col-auto">
				<img src="index.php?route=extension/captcha/basic/captcha" class="imf-fluid rounded " alt="" />
			</div>
		</div>
		{% if error_captcha %}
		<div class="text-danger">{{ error_captcha }}</div>
		{% endif %}
    {% endif %}
  </div>
</div>
