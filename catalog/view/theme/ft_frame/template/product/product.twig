			slidesPerView: 5,
			roundLengths: true,
			breakpoints: {
				480: {
				slidesPerView: 2
				},
				768: {
				slidesPerView: 3
				},
				992: {
				slidesPerView: 4
				},
				1200: {
				slidesPerView: 5
				}
			},
			nextButton: '.related-products .button-next',
			prevButton: '.related-products .button-prev',
		});
	}

